
<%- include('partials/header.ejs'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="postTitle" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Post</label>
        <textarea name="postBody" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <button type="submit" name="button" placeholder="" class="btn btn-primary">Publish</button>
    </div>
</form>

<%- include("partials/footer.ejs") -%>



